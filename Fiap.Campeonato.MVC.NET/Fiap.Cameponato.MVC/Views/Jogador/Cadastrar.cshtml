@model Fiap.Apostila08.MVC.Web.Models.Jogador
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Jogadores</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(j => j.Nome)
        @Html.TextBoxFor(j => j.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Posicao)
        @Html.TextBoxFor(j => j.Posicao, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Salario)
        @Html.TextBoxFor(j => j.Salario, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Time)
        @Html.DropDownListFor(j => j.TimeId ,
            ViewBag.times as SelectList, "Selecione",
            new { @class = "form-control"})
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
}

